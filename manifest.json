{
  "manifest_version": 3,
  "name": "EBYS İş Akışı Otomasyonu",
  "version": "1.0.0",
  "description": "Yetkili kullanıcılar için EBYS üzerinde tekrarlı işlemleri hızlandıran tarayıcı otomasyonu.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "EBYS Otomasyon",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://edys-web.example.gov.tr/*"
  ]
}
